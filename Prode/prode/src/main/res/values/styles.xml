<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Labels -->
    <style name="Grey_label">
        <item name="android:textColor">@color/ligth_grey_color</item>
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/widget_margin</item>
    </style>

    <!-- buttons -->
    <style name="Dark_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">@dimen/default_padding</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="DarkHeaderTextAppearance" parent="android:TextAppearance.Large" >
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DarkDetailTextAppearance" parent="android:TextAppearance.Large" >
        <item name="android:textSize">@dimen/detail_text_size</item>
        <item name="android:textColor">@color/ligth_grey_color</item>
    </style>

</resources>
